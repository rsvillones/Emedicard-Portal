@{
    Layout = Corelib.Config.EmailLayout;
}

<p class="title">@Model.AdditionalDependent.EndorsementBatch.CompanyName - ADDITIONAL DEPENDENT</p>
<br />
<p class="greetings">Dear Sir/Ma'am</p>
<br />
<p class="details">Additional  Dependent application has been submitted for your approval:</p>
<br />
<p class="details">Company Name: @Model.AdditionalDependent.EndorsementBatch.CompanyName</p>
<p class="details">Reference Number: @Model.AdditionalDependent.EndorsementBatch.ReferenceNumber</p>
<br />
<p class="details">Principal Name: @Model.AdditionalDependent.MemberName</p>
<p class="details">Application Date: @Model.AdditionalDependent.ApplicationDate.ToString("MM/dd/yyyy")</p>
<p class="details">Last Name: @Model.AdditionalDependent.LastName</p>
<p class="details">First Name: @Model.AdditionalDependent.FirstName</p>
<p class="details">Middle Name / MI: @Model.AdditionalDependent.MiddleName</p>
<p class="details">Date of Birth: @Model.AdditionalDependent.DateOfBirth.ToString("MM/dd/yyyy")</p>
<p class="details">Age: @Model.AdditionalDependent.Age</p>
<p class="details">Gender: @Model.AdditionalDependent.Gender</p>
<p class="details">Civil Status: @Model.AdditionalDependent.CivilStatus</p>
<p class="details">Relationship: @Model.AdditionalDependent.Relationship.Description</p>
<p class="details">Plan: @Model.AdditionalDependent.AppliedPlanDescription</p>

<br />
<p class="details">
    You may click on <a href="@(Corelib.Config.BaseUrl)/MembershipEndorsements?referenceNumber=@(Model.AdditionalDependent.EndorsementBatch.ReferenceNumber)">here</a> to login and view the endorsement.
</p>
