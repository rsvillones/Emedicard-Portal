@{
    Layout = Corelib.Config.EmailLayout;
}

<p class="title">@Model.CompanyName - REPLY TO ACTION MEMO</p>
<br />
<p class="details">Dear Sir/Ma'am,</p>
<br />
<p class="details">The following Action Memo reply was submitted for your approval:</p>
<br />
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Date Issued</th>
            <th>Details</th>
            <th>Member Reply</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var actionMemo in Model.ActionMemos)
        {
            if (actionMemo.Status != Corelib.Enums.ActionMemoStatus.Replied) { continue; }
            <tr>
                <td>
                    @{
                        string name = "";
                        if (actionMemo.DependentId.HasValue)
                        {
                            name = actionMemo.Dependent.FullName;
                        }
                        else if (actionMemo.MemberId.HasValue)
                        {
                            name = actionMemo.Member.FullName;
                        }
                    }
                    @name
                </td>
                <td>@actionMemo.DateIssued</td>
                <td>@actionMemo.Details</td>
                <td>@actionMemo.MemberReply</td>
            </tr>
        }
    </tbody>
</table>