@model HomeIndexViewModel

@{
    ViewBag.Title = "Home Page";
}
@if (Helper.IsMember())
    {
        <div class="row">
            <div class="col-lg-5">
                <div id="panel-title">Account Information</div>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div id="panel-container">
                            <form class="form-horizontal">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <div class="col-lg-4">
                                                <label>Employee No.:</label>
                                            </div>
                                            <div class="col-lg-8">
                                                <label>EMP00002&nbsp;</label>
                                            </div>
                                            <div class="col-lg-4">
                                                <label>Employee Name:</label>
                                            </div>
                                            <div class="col-lg-8">
                                                <label>Jose Lee Edward D. Carandang&nbsp;</label>
                                            </div>
                                            <div class="col-lg-4">
                                                <label>Email Address:</label>
                                            </div>
                                            <div class="col-lg-8">
                                                <label>edward_carandang@yahoo.com&nbsp;</label>
                                            </div>
                                            <div class="col-lg-4">
                                                <label>Area:</label>
                                            </div>
                                            <div class="col-lg-8">
                                                <label>MAKATI&nbsp;</label>
                                            </div>
                                            <div class="col-lg-4">
                                                <label>Effectivity Date:</label>
                                            </div>
                                            <div class="col-lg-8">
                                                <label>07/01/2014&nbsp;</label>
                                            </div>
                                            <div class="col-lg-4">
                                                <label>Validity Date:</label>
                                            </div>
                                            <div class="col-lg-8">
                                                <label>06/30/2015&nbsp;</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <div id="panel-title">My Action Memos</div>
                <div class="panel panel-default">
                    <div class="panel-body">
                        @Html.Partial("_MyActionMemos", Model.MyActionMemos)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div id="panel-title">Medical and Dental Availments</div>
                <div class="panel panel-default">
                    <div class="panel-body">
                        &nbsp;
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div id="panel-title">Reimbursement Status</div>
                <div class="panel panel-default">
                    <div class="panel-body">
                        &nbsp;
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div id="panel-title">My Requests</div>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div id="panel-container">
                            <form class="form-horizontal">
                                <br />
                                <div class="row spacing">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <div class="col-lg-12">
                                                <ul class="nav nav-tabs" role="tablist">
                                                    <li class="active"><a href="#Amendments" role="tab" data-toggle="tab">Amendments</a></li>
                                                    <li><a href="#IDReplacement" role="tab" data-toggle="tab">ID Replacement</a></li>
                                                    <li><a href="#AdditionalDependents" role="tab" data-toggle="tab">Additional Dependents</a></li>
                                                    <li><a href="#CancellationOfDependents" role="tab" data-toggle="tab">Cancellation of Dependents</a></li>
                                                </ul>
                                                <div class="tab-content">
                                                    <div class="tab-pane active" id="Amendments">&nbsp;</div>
                                                    <div class="tab-pane" id="IDReplacement">&nbsp;</div>
                                                    <div class="tab-pane" id="AdditionalDependents">&nbsp;</div>
                                                    <div class="tab-pane" id="CancellationOfDependents">&nbsp;</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    } else if (Helper.IsCorporateAdmin()){
                        
        <div class="row">
            <div class="col-lg-5">
                <div id="panel-title">User Information</div>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div id="panel-container">
                            <form class="form-horizontal">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <div class="col-lg-4">
                                                <label>Username:</label>
                                            </div>
                                            <div class="col-lg-8">
                                                <label>@Model.ApplicationUser.UserName</label>
                                            </div>
                                            <div class="col-lg-4">
                                                <label>Name:</label>
                                            </div>
                                            <div class="col-lg-8">
                                                <label>@Model.ApplicationUser.Name&nbsp;</label>
                                            </div>
                                            <div class="col-lg-4">
                                                <label>Email Address:</label>
                                            </div>
                                            <div class="col-lg-8">
                                                <label>@Model.ApplicationUser.Email&nbsp;</label>
                                            </div>
                                            <div class="col-lg-4">
                                                <label>Designation:</label>
                                            </div>
                                            <div class="col-lg-8">
                                                <label>@Model.ApplicationUser.Designation&nbsp;</label>
                                            </div>
                                            <div class="col-lg-4">
                                                <label>Phone Number:</label>
                                            </div>
                                            <div class="col-lg-8">
                                                <label>@Model.ApplicationUser.PhoneNumber&nbsp;</label>
                                            </div>
                                            <div class="col-lg-4">
                                                <label>Fax:</label>
                                            </div>
                                            <div class="col-lg-8">
                                                <label>@Model.ApplicationUser.Fax&nbsp;</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <div id="panel-title">My Action Memos</div>
                <div class="panel panel-default">
                    <div class="panel-body">
                        @Html.Partial("_MyActionMemos", Model.MyActionMemos)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div id="panel-title">My Accounts</div>
                <div class="panel panel-default">
                    <div class="panel-body">
                        @Html.Action("GetMyAccounts", "Items", new { area = "" })
                    </div>
                </div>
            </div>    
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div id="panel-title">My Approvals</div>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div id="panel-container">
                            <form class="form-horizontal">
                                <br />
                                <div class="row spacing">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <div class="col-lg-12">
                                                <ul class="nav nav-tabs" role="tablist">
                                                    <li class="active"><a href="#Amendments" role="tab" data-toggle="tab">Amendments</a></li>
                                                    <li><a href="#IDReplacement" role="tab" data-toggle="tab">ID Replacement</a></li>
                                                    <li><a href="#AdditionalDependents" role="tab" data-toggle="tab">Additional Dependents</a></li>
                                                    <li><a href="#CancellationOfDependents" role="tab" data-toggle="tab">Cancellation of Dependents</a></li>
                                                </ul>
                                                <div class="tab-content">
                                                    <div class="tab-pane active" id="Amendments">&nbsp;</div>
                                                    <div class="tab-pane" id="IDReplacement">&nbsp;</div>
                                                    <div class="tab-pane" id="AdditionalDependents">&nbsp;</div>
                                                    <div class="tab-pane" id="CancellationOfDependents">&nbsp;</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
}     
