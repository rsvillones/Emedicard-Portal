using System;
using System.Collections.Generic;
using System.Linq;
using System.Web;
using System.Web.UI;
using System.Web.UI.WebControls;
using Corelib;
using Microsoft.Reporting.WebForms;

namespace WebUI.Reports.UtilizationReporting
{
    public partial class UnBilledReportInPatient : System.Web.UI.Page
    {
        protected void Page_Load(object sender, EventArgs e)
        {
            AccountCodeHiddenField.Value = Request["accountCode"];
            if (IsPostBack) return;
            GenerateReport(sender, e);
        }

        protected void GenerateReport(object sender, EventArgs e)
        {
            using (var db = new UtilizationDataContext())
            {
                var startDateParam = new ReportParameter("StartDate", StartDateText.Text);
                var endDateParam = new ReportParameter("EndDate", EndDateText.Text);
                var memberCodeParam = new ReportParameter("MemberCode", MemberCodeHiddenField.Value);

                UtilizationReportUnbilledReportIpViewer.LocalReport.DataSources.Clear();
                UtilizationReportUnbilledReportIpViewer.LocalReport.ReportPath = Server.MapPath("~/Reports/UtilizationReporting/UnBilledReportInPatient.rdlc");
                UtilizationReportUnbilledReportIpViewer.LocalReport.SetParameters(new ReportParameter[] { startDateParam, endDateParam, memberCodeParam });
                UtilizationReportUnbilledReportIpViewer.LocalReport.DataSources.Add(new ReportDataSource("UnBilledReportInPatient", UtilizationHelper.GetUtilizationUnBilledReportInPatients(db, Request["accountCode"], UtilizationHelper.ReportParameterDateTime(StartDateText.Text), UtilizationHelper.ReportParameterDateTime(EndDateText.Text), MemberCodeHiddenField.Value)));
            }
        }   
    }
}