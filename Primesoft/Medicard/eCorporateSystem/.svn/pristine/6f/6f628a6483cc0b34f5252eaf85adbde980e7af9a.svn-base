@model PagedList.IPagedList<Corelib.Models.ApplicationUser>

@{
    ViewBag.Title = "Users";
}

<div class="row">
    <div class="col-lg-8">
        <h2 class="title">Users</h2>
    </div>
    @using (Html.BeginForm("Index", "Users", FormMethod.Get))
    {
        <div class="col-lg-4">
            <div class="input-group input-group-search">
                <input type="text" value="@ViewBag.SearchValue" readonly="readonly" id="click" class="form-control space-cr search-filter" placeholder="Search & Filter">
                <div class="input-group-btn">
                    <button type="button" class="dropdown-toggle btn-dd btn-default" data-toggle="dropdown" tabindex="-1">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <div class="rightMenu dropdown-menu">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="row"><div class="col-sm-11 col-centered"><h4 class="form-title ">Search & Filter</h4></div></div>
                                <div class="form-group">
                                    <label class="control-label col-lg-12">Account Name/Code:</label>
                                    <div class="col-lg-12">
                                        <input type="text" value="@ViewBag.AccountCode" name="accountCode" onclick="return false;" class="form-control input-sm" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-12">Name:</label>
                                    <div class="col-lg-12">
                                        <input type="text" value="@ViewBag.UserName" name="userName" onclick="return false;" class="form-control input-sm" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-12">Role:</label>
                                    <div class="col-lg-12">
                                        <input type="text" value="@ViewBag.Role" name="role" onclick="return false;" class="form-control last-input" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-grp btn-search" tabindex="-1">Search</button>
            </div>
        </div>
    }
</div>


<div class="row">
    <div class="col-lg-6 pageList-margin">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
        <p class="pager-padding" style="float: right">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        </p>
    </div>
    <div class="col-lg-6">
        <p style="float: right">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
        </p>
    </div>
</div>


<table class="table table-custom">
    <tr>
        <th>
            @*@Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParam, currentFilter = ViewBag.CurrentFilter })*@

            <a class="sort-table-name" href="@Url.Action("Index", new { sortOrder = ViewBag.NameSortParam, currentFilter = ViewBag.CurrentFilter })">
                Name &nbsp;<i class="glyphicon glyphicon-chevron-down"></i>

            </a>
        </th>
        <th>
            @*@Html.ActionLink("Username", "Index", new { sortOrder = ViewBag.UserNameSortParam, currentFilter = ViewBag.CurrentFilter })*@

            <a class="sort-table-username" href="@Url.Action("Index", new { sortOrder = ViewBag.UserNameSortParam, currentFilter = ViewBag.CurrentFilter })">
                Username &nbsp;<i class="glyphicon glyphicon-chevron-down"></i>
            </a>
        </th>
        <th>
            @*@Html.ActionLink("Email", "Index", new { sortOrder = ViewBag.EmailSortParam, currentFilter = ViewBag.CurrentFilter })*@

            <a class="sort-table-email" href="@Url.Action("Index", new {sortOrder = ViewBag.EmailSortParam, currentFilter = ViewBag.CurrentFilter})">
                Email &nbsp;<i class="glyphicon glyphicon-chevron-down"></i>
            </a>
        </th>
        <th>Company Name</th>
        @*<th>
                    @Html.ActionLink("PhoneNumber", "Index", new { sortOrder = ViewBag.PhoneNumberSortParam, currentFilter = ViewBag.CurrentFilter })

                    <a class="sort-table-phonenumber" href="@Url.Acion("Index", new{sortOrder = ViewBag.PhoneNumberSortParam, currentFilter=ViewBag.CurrentFilter})">
                    Phone Number &nbsp;<i class="glyphicon glyphicon-chevron-down"></i>
                </a>
            </th>*@
        <th>Is Active</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="UserContainer">
            @Html.Partial("_User", item)
        </tr>
    }

</table>

@section Scripts{
    @Html.Partial("_Message")
    <script type="text/javascript">
        $(document).ready(function () {
            if (window.location.href.indexOf("sortOrder=name_desc") > -1) {
                $('.sort-table-name').find('i').toggleClass('glyphicon-chevron-down').toggleClass('glyphicon-chevron-up');
            } else if (window.location.href.indexOf("sortOrder=username_desc") > -1) {
                $('.sort-table-username').find('i').toggleClass('glyphicon-chevron-down').toggleClass('glyphicon-chevron-up');
            } else if (window.location.href.indexOf("")) {
            }
            $(function () {
                $('.dropdown-menu input , .dropdown-menu select').click(function (event) {
                    event.stopPropagation();
                });
            });
            $(function () {
                //$(".dropdown-toggle").dropdown('toggle'); // this works
                $('#click').click(function (e) {
                    e.stopPropagation();
                    $(".dropdown-toggle").dropdown('toggle');// this doesn't
                });
            });
        });

        function UpdateUser(selector, guid) {
            var td = selector.parent().parent().children('td:nth-child(1)');
            var container = selector.closest('.UserContainer');
            var propertyValue = false;
            if (selector.is(':checked')) {
                propertyValue = true;
            }
            var option = {
                url: '@Url.Action("UpdateActiveUer")',
                type: 'post',
                data: {
                    guid: guid,
                    isActive: propertyValue
                }
            };
            $.ajax(option).done(function (data) {
                container.html(data);
            });
        }
    </script>
}