
@model PagedList.IPagedList<Member>

@{
    ViewBag.Title = "Member List";
    Layout = "~/Areas/CorporateAdministrator/Views/Shared/_AccountManagerLayout.cshtml";
    var member = new Member();
}

<div class="row">
    <div class="col-lg-6 pageList-margin">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
        <p class="pager-padding" style="float: right">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        </p>
    </div>
    <div class="col-lg-6">
        <p style="float: right">
            @Html.ActionLink("Add Amendment", "Amendment", new { accountCode = ViewBag.AccountCode }, new { @class = "btn btn-primary" })
        </p>
    </div>
</div>

<table class="table table-custom">
    <tr>
        <th>
            @Html.DisplayNameFor(modelItem => member.EmployeeNumber)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => member.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => member.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => member.CivilStatus)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => member.EmailAddress)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => member.Area)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.EmployeeNumber)
            </td>
            <td>
                @Html.DisplayFor(model => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(model => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(model => item.CivilStatus)
            </td>
            <td>
                @Html.DisplayFor(model => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(model => item.Area)
            </td>
            <td>
                @Html.ActionLink("Create Amendment", "Amendment", new { accountCode = ViewBag.AccountCode, memberGuid = item.Guid }, new { @class = "btn btn-primary btn-xs" })
                @*@Html.ActionLink("Delete", "DeleteBatch", new { accountCode = ViewBag.AccountCode, guid = item.Guid }, new { @class = "btn btn-danger btn-xs" })*@
            </td>
        </tr>
    }
</table>

@section Scripts{
    @Html.Partial("_Message")
    <script type="text/javascript">
        $(document).ready(function () {
            if (window.location.href.indexOf("name_desc") > -1) {
                $('.sort-table').find('i').toggleClass('glyphicon-chevron-down').toggleClass('glyphicon-chevron-up');
            }
        });
    </script>
}


