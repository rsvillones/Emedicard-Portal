@{
    Layout = Corelib.Config.EmailLayout;
}

<p class="title">Submit New Member By Member Sent to URG</p>
<br />
<p class="details">Dear Sir/Ma'am,</p>
<br />
<p class="details">The following was enrolled with the following details:</p>
<br />
<p class="details">Endorsement Type: @Model.EndorsementBatch.EndorsementType</p>
<p class="details">Endorsement Method: @Model.EndorsementBatch.BatchType</p>
<p class="details">Company Name: @Model.EndorsementBatch.CompanyName</p>
<p class="details">Total Count:  @Model.EndorsementBatch.EndorsementCount</p>
<p class="details">Reference ID: @Model.EndorsementBatch.ReferenceNumber</p>
<br />
<table border="1" style="border-collapse:collapse;width:70%">
    <thead>
        <tr>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Birthday</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Corelib.Models.Member member in Model.EndorsementBatch.Members)
        {
            if (!(member.DateSubmittedToUrg >= Model.From && member.DateSubmittedToUrg <= Model.To)) { continue; }

            <tr>
                <td>@member.LastName</td>
                <td>@member.FirstName</td>
                <td>@member.MiddleName</td>
                <td>@member.DateOfBirth.ToString("MM/dd/yyyy")</td>
            </tr>
        }
    </tbody>
</table>
<br />
<p class="details">
    You may click on <a href="@(Corelib.Config.BaseUrl)/MembershipEndorsements?referenceNumber=@(Model.EndorsementBatch.ReferenceNumber)">here</a> and login to receive the endorsement.
</p>
<br />
<p class="details">Disclaimer:</p>
<br />
