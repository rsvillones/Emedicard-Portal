@model Document
@using HtmlHelpers.BeginCollectionItem

<tr>
    @using (Html.BeginCollectionItem("Documents"))
    {
        <td>
            @Html.HiddenFor(t => t.GuidFilename)
            @Html.HiddenFor(t => t.DocumentTypeId)
            @Html.HiddenFor(t => t.Id)
            @Html.HiddenFor(t => t.Guid)
            @Html.HiddenFor(t => t.Timestamp)
            @Html.HiddenFor(t => t.Filename)
            @Html.HiddenFor(t => t.DateUploaded)
            @Html.DisplayFor(t => t.Filename)
        </td>
        <td>
            @Html.DisplayFor(t => t.DocumentType.Name)
        </td>
        <td>
            @Html.DisplayFor(t => t.DateUploaded)
        </td>
        <td>
            <input type="button" value="Delete" class="btn btn-danger btn-xs" onclick="$(this).parent().parent().remove()" />
        </td>
    }
</tr>
