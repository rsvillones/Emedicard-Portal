@model Dependent

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id);
    @Html.HiddenFor(model => model.Guid);
    @Html.HiddenFor(model => model.Timestamp);
    @Html.HiddenFor(model => model.CrBy);
    @Html.HiddenFor(model => model.CrById);
    @Html.HiddenFor(model => model.CrDate);
    
    <div class="row">
        <div class="col-lg-12 col-centered">
            <div id="panel-title">Edit Dependent Personal Details</div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div id="panel-container">
                        <form class="form-horizontal">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div id="PersonalDetails">
                                        <div class="row form-padding">
                                            <div class="col-lg-12">
                                                @Html.Partial("_Detail", Model)

                                                <div class="row space">
                                                    <div class="col-lg-12">
                                                        <div class="no-color pull-right">
                                                            <input type="submit" value="Save" class="btn btn-primary" />
                                                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#DateOfBirth").datepicker();
        });
        function OnDateOfBirthChange() {
            var options = {
                url: '@Url.Action("ComputeAge", "Utilities", new { area = "" })',
                type: 'POST',
                data: {
                    dateOfBirth: $('#DateOfBirth').val()
                },
                success: function (age) {
                    $('#Age').val(age);
                }
            };
            $.ajax(options);
        }
    </script>
    @Html.Partial("_Message")
}