@model Corelib.Models.Amendment

@{
    ViewBag.Title = "Amendment";
}

<div class="row">
    <div class="col-lg-12 col-centered">
        <div id="panel-title">Amendment Detail</div>
        <div class="panel panel-default">
            <div class="panel-body">
                <div id="panel-container">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-lg-12">
                                <div id="PersonalDetails">
                                    <div class="row form-padding">
                                        <div class="col-lg-12">
                                            @Html.Partial("_Amendment", Model)
                                            <div class="row space">
                                                <div class="col-lg-12">
                                                    <div class="space no-color pull-right">
                                                        @*@Html.ActionLink("Back to List", "Index", "MembershipEndorsements", new { area = "" }, new { @class = "btn btn-primary" })*@
                                                        <input type="button" class="btn btn-primary" value="Back to List" onclick="history.go(-1);" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Html.Partial("_Message")

    <script type="text/javascript">

        $(document).ready(function () {
            $('#MemberContainer').attr("style", "margin-bottom:14px");
            $('#FileWrapper').prop('disabled', true);
            $('#ClearFile').prop('disabled', true);
            $('#ClearExistingFile').prop('disabled', true);
            $('#FileInput').hide();
            $('#labelFileExist').hide();
            $('#ClearExistingFile').hide();

            $('#@Html.IdFor(t => t.MemberCode)').select2({
                placeholder: "Search for a Active Member",
                minimumInputLength: 1,
                ajax: {
                    url: '@Url.Action("GetAllMembers")',
                    dataType: 'json',
                    data: function (term, page) {
                        return {
                            q: term, // search term
                            accountCode: '@Model.AccountCode',
                            page_limit: 10
                        };
                    },
                    results: function (data, page) { // parse the results into the format expected by Select2.
                        // since we are using custom formatting functions we do not need to alter remote JSON data
                        return { results: data };
                    }
                }
            });

            $('#@Html.IdFor(t => t.MemberCode)').on('select2-selecting', function (e) {
                $('#@Html.IdFor(t => t.MemberName)').val(e.choice.text);
            });

            $("#@Html.IdFor(t => t.MemberCode)").select2('data', { id: '@Model.MemberCode', text: '@Model.MemberName' });

            @if (ViewBag.ReadOnly != null && ViewBag.ReadOnly){
                @:$("#@Html.IdFor(t => t.MemberCode)").select2('readonly', true);
                                                }
            if ($('#DataType').children('option[selected="selected"]').text().indexOf('Plan') >= 0) {
                $('#ChangeDataFrom').hover(
                  function () {
                      var tooltip = $(this).closest('a');
                      tooltip.attr('data-original-title', $(this).val()).tooltip('fixTitle').tooltip('show');
                  }, function () {
                      var tooltip = $(this).closest('a');
                      tooltip.tooltip('hide');
                  }
                );
                $('#DataToContainer').hover(
                  function () {
                      var tooltip = $(this);
                      tooltip.attr('data-original-title', $(this).children().children('option[selected="selected"]').text()).tooltip('fixTitle').tooltip('show');
                  }, function () {
                      var tooltip = $(this);
                      tooltip.tooltip('hide');
                  }
                );
            }
        });

    </script>
}