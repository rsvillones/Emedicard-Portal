@model DeclinedIdReplacement

@{
    ViewBag.Title = "Declined ID Replacement";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Guid)
    @Html.HiddenFor(model => model.EndorsementBatchGuid)
    <div class="row">
        <div class="col-lg-8 col-centered">
            <div id="panel-title">Declined ID Replacement</div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div id="panel-container">
                        <div class="form-horizontal">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="col-lg-12">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "control-label col-lg-3 required" })
                                            <div class="col-lg-9">
                                                @Html.TextAreaFor(model => model.Remarks, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-actions no-color" style="text-align: right">
                                        <input type="submit" value="Submit" class="btn btn-primary" />
                                        @*@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })*@
                                        <input type="button" class="btn btn-primary" value="Back to List" onclick="history.go(-1);" />                                                           
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
