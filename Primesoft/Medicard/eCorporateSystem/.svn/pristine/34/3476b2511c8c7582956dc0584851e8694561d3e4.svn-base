@model ImportViewModel
@using (Html.BeginForm("UploadApplication", "MembershipEndorsement", FormMethod.Post, new { id = "uploadNewAppSerialize" }))
{
    <br />
    <h4 class="form-title">Verification Summary</h4>
    <div>
        <h5>Row Completed:</h5>
        <label>
            @Html.HiddenFor(model => model.UploadSummary.RowCompleted)
            @Model.UploadSummary.RowCompleted
        </label>
    </div>
    <div>
        <h5>File Name:</h5>
        <label>
            @Html.HiddenFor(model => model.UploadSummary.FileName)
            @Model.UploadSummary.FileName
        </label>
    </div>
    <div>
        <h5>Row Contains Error:</h5>
        <label>
            @Html.HiddenFor(model => model.UploadSummary.NumberOfErrors)
            @{
                if (Model.UploadSummary.ErrorMessage != "Invalid Excel Format."){
                    @Html.DisplayFor(modelItem => Model.UploadSummary.NumberOfErrors)
                }
                else{
                    var returnValue = string.Format("{0} - {1}", Model.UploadSummary.NumberOfErrors, Model.UploadSummary.ErrorMessage);
                    @Html.DisplayFor(modelItem => returnValue)
                }
            }
        </label>
    </div>

    <div class="row">
        <div class="col-lg-6">
            @Html.CheckBox("ShowAllError", new { @checked = "checked" })<label for="ShowAllError">Show All Errors</label>
        </div>
        <div class="col-lg-6">
            <p style="float: right">
                <a href="javascript:void(0);" onclick="saveApplication();" id="saveApplication" class="btn btn-primary pull-right">Save</a>
            </p>
        </div>
    </div>
    <div class="scrollable-table-x col-lg-12">
        <table>
            <thead>
                <tr>
                    <th>Email Address</th>
                    <th>Employee Number</th>
                    <th>Area</th>
                    <th>Cost Center</th>
                    <th>Last Name</th>
                    <th>First Name</th>
                    <th>Middle Name</th>
                    <th>Suffix</th>
                    <th>Gender</th>
                    <th>Date Of Birth</th>
                    <th>Age</th>
                    <th>Civil Status</th>
                    <th>Effectivity Date</th>
                    <th>Validity Date</th>
                    <th>Date Hired</th>
                    <th>Applied Plan</th>
                    <th>No. of allowed dependents</th>
                    <th>Dependent Applied Plan</th>
                </tr>
            </thead>
            <tbody id="ApplicationVerificationBody">
                @foreach (Corelib.Models.ApplicationVerification item in Model.ApplicationVerifications){
                    if (item.IsError){
                    <tr style="background-color:red;">
                        <td colspan="18">@item.ErrorMessage</td>
                    </tr>
                    <tr style="background-color:red">
                        @Html.Partial("_NewApplication", item)
                    </tr>
                    }
                    else{
                    <tr style="display:none">
                        @Html.Partial("_NewApplication", item)
                    </tr>
                    }
                }
            </tbody>
        </table>
    </div>
}

