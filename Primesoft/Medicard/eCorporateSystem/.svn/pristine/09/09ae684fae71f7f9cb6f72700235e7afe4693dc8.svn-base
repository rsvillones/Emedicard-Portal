@model Corelib.Models.Amendment

@{
    ViewBag.Title = "Amendment";
}

@using (Html.BeginForm("Amendment", "RequestManagement", FormMethod.Post, new { accountCode = ViewBag.AccountCode, enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true);
    @Html.AntiForgeryToken()

    @Html.Partial("_Amendment", Model)

    <div class="row space">
        <div class="col-lg-12">
            <div class="no-color pull-right">
                @Html.ActionLink("Approve", "ApproveAmendment", new { guid = Model.Guid }, new { @class = "btn btn-primary " })
                @Html.ActionLink("Disapprove", "DisapproveAmendment", new { guid = Model.Guid }, new { @class = "btn btn-danger" })
                @Html.ActionLink("Back to List", "Index", new { memberGuid = Model.Guid }, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Html.Partial("_Message")

    <script type="text/javascript">

    $(document).ready(function () {
        $('select').prop('disabled', 'disabled');
        $('input').prop('readonly', 'readonly');
        $('textarea').prop('readonly', 'readonly');
        $('#FileInput').empty();
        $('#FileInput').html('<label>Attached File:</label>' + '&nbsp; @Html.ActionLink(Model.DocumentFileName, "DownloadFile", new {  guid = Model.Guid }, new { @class = "" })');
    });
    </script>
}