@model PagedList.IPagedList<IActionMemo>

<div id="MyLegacyActionMemosContainer">
    @if (Model.PageCount > 1)
    {
        @Html.PagedListPager(Model, page => Url.Action("GetMyActionMemos", new { page, accountCode = ViewBag.AccountCode, username = ViewBag.Username }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(PagedListRenderOptions.ClassicPlusFirstAndLast, new AjaxOptions() { UpdateTargetId = "MyLegacyActionMemosContainer", OnBegin = "OnMyLegacyActionMemoBegin()" }))
        <br /><br /><br />
    }

    <table class="table table-fixed">
        <thead>
            <tr>
                <th style="width:5%">
                    <label>Date Issued</label>
                </th>
                <th style="width:10%">
                    <label>Type</label>
                </th>
                <th style="width:30%">
                    <label>Issued To</label>
                </th>
                <th style="width:45%">
                    <label>Details</label>
                </th>
                <th style="width:10%">
                    &nbsp;
                </th>
            </tr>
        </thead>
    </table>
    <div class="scrollable-tables" style="margin-top: -3px !important;height: 130px !important;margin-bottom: 0 !important">
        <table class="table table-fixed">
            <tbody>
                @if (Model != null && Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td style="width:5%" class="text-center">
                                <p class="box">
                                    @Html.DisplayFor(model => item.ActionMemoDate)
                                </p>
                            </td>
                            <td style="width:10%" class="text-left">
                                @Html.DisplayFor(model => item.Type)
                            </td>
                            <td style="width:30%" class="text-left">
                                @Html.DisplayFor(model => item.FullName)
                            </td>
                            <td style="width:45%" class="text-left">
                                @Html.DisplayFor(model => item.ActionMemoRemarks)
                            </td>
                            <td style="width: 10%">
                                &nbsp;
                            </td>
                        </tr>
                    }
                }
                else
                {
                    @Html.Partial("_NoData", 5)
                }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    function OnMyLegacyActionMemoBegin() {
        $('#MyLegacyActionMemosContainer').html('Loading...');
    }
</script>