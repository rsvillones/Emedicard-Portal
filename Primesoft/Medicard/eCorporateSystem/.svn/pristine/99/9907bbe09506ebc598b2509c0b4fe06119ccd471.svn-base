@{
    Layout = Corelib.Config.EmailLayout;
    Corelib.Models.Member member = Model.Member;
    string effectivityDateString = "";
    if (member.EffectivityDate.HasValue)
    {
        effectivityDateString = member.EffectivityDate.Value.ToString("MM/dd/yyyy");
    }
    string validityDateString = "";
    if (member.ValidityDate.HasValue)
    {
        validityDateString = member.ValidityDate.Value.ToString("MM/dd/yyyy");
    } 
}

<p class="title">Approved Member</p>
<br />
<p class="details">Dear @member.FullName,</p>
<p class="details">Your Medicard Application has been approved.</p>
<br />
<p class="details">The following are the details of your membership:</p>
<p class="details">Member Code:@member.Code</p>
<p class="details">Last Name:@member.LastName</p>
<p class="details">First Name:@member.FirstName</p>
<p class="details">Middle Name/MI:@member.MiddleName</p>
<p class="details">Date of Birth:@member.DateOfBirth.ToString("MM/dd/yyyy")</p>
<p class="details">Gender:@member.Gender</p>
<p class="details">Civil Status:@member.CivilStatus</p>
<p class="details">Plan:@member.AppliedPlanDescription</p>
<p class="details">Effectivity Date: @effectivityDateString</p>
<p class="details">Validity Date: @validityDateString</p>
<br />
<p class="details">Thank you for using eMedicard!</p>