@using WebUI.Models
@model LoginViewModel

@{
    ViewBag.Title = "Log in";
}
<div class="login-centered">
    <div class="row">
        <div class="col-lg-8">
            <div class="row">
                <section id="loginInfo">
                    <h2 class="login-title">Welcome to eMediCard System</h2>
                    <p class="lead">
                        @*Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean  massa. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Donec quam felis, ultricies nec, pellentesque eu.*@
                        Medicard's value added service to its clients. All free.
                    </p>
                    <p>
                        @*<a href="http://www.medicardphils.com" class="btn btn-primary btn-lg">Learn more &raquo;</a>*@
                        <a href="javascript:void(0);" onclick="popUpLearnMore()" class="btn btn-primary btn-lg">Learn more &raquo;</a>
                    </p>
                </section>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="row">
                <section id="loginForm">

                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="container">
                            <div class="row">
                                <h2>@ViewBag.Title.</h2>
                                <h5>Please login with your Username and Password.</h5>
                            </div>
                        </div>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="container">
                            <div class="form-group input-group-lg ">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-username", placeholder = "Username" })
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="container">
                            <div class="form-group input-group-lg">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control input-password", placeholder = "Password" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <a href="javascript:void(0);" onclick="popUpForgotPassword()" style="color:white">Forgot Password?</a>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-5">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe)
                                </div>
                            </div>
                            <div class="col-lg-7" style="text-align: right">
                                <input type="submit" value="Log in &nbsp &raquo;" class="btn btn-default btn-lg" />
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myLearnMoreModal" tabindex="-1" role="dialog" aria-labelledby="myLearnMoreModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myLearnMoreTitle">Learn More</h4>
            </div>
            <div class="modal-body" id="myLearnMoreBody">
                <p>
                    Check Membership Information <br />
                    View Medical and Dental Availment <br />
                    Benefit Information <br />
                    Utilization Reporting <br />
                    Membership Endorsement <br />
                    Request for Amendments <br />
                    List of Active Members <br />
                    List of Resigned Members <br />
                    List of Enrolees with Action Memos
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="forgotPasswordModal" tabindex="-1" role="dialog" aria-labelledby="forgotPasswordModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="forgotPasswordTitle">Forgot Password?</h4>
            </div>
            <div class="modal-body" id="forgotPasswordBody">
                <p>
                    Please contact your Corporate Admin or HR to reset your password.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>

<footer>
    <p>
        Copyright &#169; 2014 MediCard Philippines, Inc. All Rights Reserved.
    </p>
</footer>
@section Scripts {
    <script type="text/javascript">
        function popUpLearnMore() {
            $('#myLearnMoreModal').modal('show');
        }
        function popUpForgotPassword() {
            $('#forgotPasswordModal').modal('show');
        }
    </script>
}