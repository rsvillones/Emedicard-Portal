
@{
    ViewBag.Title = "Profile Management";
}
<div class="row">
    <div class="col-lg-12 col-centered">
    <div id="panel-title">Profile Management</div>
        <div class="panel panel-default">
            <div class="panel-body">
                <div id="panel-container">
                    <form class="form-horizontal">
                        <br />
                        <div class="row spacing">
                            <div class="col-lg-6">
                                <h4 class="form-title">User Information</h4>
                                <div class="form-group">
                                    <label class="control-label col-lg-3">Username:</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3">Name:</label>
                                    <div class="col-sm-5">
                                        <input type="text" class="form-control" placeholder="First Name">
                                    </div>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" placeholder="Last Name">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3">Designation:</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3">Telephone No.:</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3">Fax No.:</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3">Mobile No.:</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3">Email:</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <h4 class="form-title">Login and Access Information</h4>
                                <p>Leave blank for no changes.</p>
                                <div class="form-group">
                                    <label class="control-label col-lg-3">Old Password:</label>
                                    <div class="col-sm-9">
                                        <input type="password" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3">New Password:</label>
                                    <div class="col-sm-9">
                                        <input type="password" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3">Confirm Password:</label>
                                    <div class="col-sm-9">
                                        <input type="password" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                 <div style="text-align: right">
                                    <input type="submit" value="Save Changes" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
