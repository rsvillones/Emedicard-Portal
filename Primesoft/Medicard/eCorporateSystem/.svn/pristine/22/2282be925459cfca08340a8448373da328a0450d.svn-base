<%@ Page Language="C#" AutoEventWireup="true" CodeBehind="Dental.aspx.cs" Inherits="WebUI.Reports.UtilizationReporting.Dental" %>

<%@ Register TagPrefix="rsweb" Namespace="Microsoft.Reporting.WebForms" Assembly="Microsoft.ReportViewer.WebForms, Version=11.0.0.0, Culture=neutral, PublicKeyToken=89845dcd8080cc91" %>

<!DOCTYPE html>

<html>
<head id="Head1" runat="server">
    <%--<link href="/Content/Site.css" rel="stylesheet" />--%>
    <link href="/Content/bootstrap.css" rel="stylesheet" /> 
    <style>
        html, body {
            height: 100%;
            min-height: 100%;
            position: relative;
            overflow: hidden;
        }

        .column, .columns {
            padding-left: 0 !important;
            padding-right: 0 !important;
        }
    </style>
</head>
<body>
    <form id="form1" runat="server" style="height: 100%">
        <div class="row">
            <div class="col-lg-1">
                <label>Start Date:</label>
            </div>
            <div class="col-lg-2">
                <asp:TextBox ID="StartDateText" Width="150px" runat="server" AppendDataBoundItems="False" AutoPostBack="False" CssClass="lg-12 form-control startDate"></asp:TextBox>
            </div>
            <div class="col-lg-1">
                <label>End Date:</label>
            </div>
            <div class="col-lg-2">
                <asp:TextBox ID="EndDateText" Width="150px" runat="server" AppendDataBoundItems="False" AutoPostBack="False" CssClass="lg-12 form-control"></asp:TextBox>
            </div>
            <div class="col-lg-1">
                <label>Member Last Name:</label>
            </div>
            <div class="col-lg-2">
                <asp:TextBox ID="LastNameText" Width="150px" runat="server" AppendDataBoundItems="False" AutoPostBack="False" CssClass="lg-12 form-control"></asp:TextBox>
            </div>
            <div class="col-lg-2">
                <asp:Button ID="GenerateButton" runat="server" Text="Generate" OnClick="GenerateReport" />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <asp:ScriptManager ID="ScriptManager1" runat="server"></asp:ScriptManager>
                <rsweb:ReportViewer ID="UtilizationReportDentalViewer" runat="server" Width="100%" Height="100%"></rsweb:ReportViewer>
            </div>
        </div>
    </form>
    <script language="javascript" type="text/javascript">
        ResizeReport();
        function ResizeReport() {
            var viewer = document.getElementById("<%= UtilizationReportDentalViewer.ClientID %>");
           var fixedtable = document.getElementById("UtilizationReportDentalViewer_fixedTable").getElementsByTagName('tbody')[0];;
           var window = document.documentElement.clientHeight;
           fixedtable.style.height = (window - 77) + "px";
           viewer.style.height = (window - 45) + "px";
       }
        window.onresize = function resize() { ResizeReport(); };
    </script>
</body>
</html>


