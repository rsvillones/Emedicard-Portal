@model AccountManagerViewModel
@{
    ViewBag.Title = "Account Manager";
}
<div class="row">
    <div class="col-lg-12 col-centered">
    <div id="panel-title">User Information</div>
        <div class="panel panel-default">
            <div class="panel-body">
                <div id="panel-container">
                    <form class="form-horizontal">
                        <div class="row">
                            <div class="col-lg-2">
                                <img src="~/Content/images/company_logo2.png" alt="" class="img-responsive img-thumbnail user-photo" />
                            </div>
                            <div class="col-lg-10">
                                <div class="form-group">
                                    <div class="col-lg-2">
                                        <label>Username:</label>
                                    </div>
                                    <div class="col-lg-10">
                                        <label>@Model.ApplicationUser.UserName&nbsp;</label>
                                    </div>
                                    <div class="col-lg-2">
                                        <label>Name:</label>
                                    </div>
                                    <div class="col-lg-10">
                                        <label>@Model.ApplicationUser.Name&nbsp;</label>
                                    </div>
                                    <div class="col-lg-2">
                                        <label>Designation:</label>
                                    </div>
                                    <div class="col-lg-10">
                                        <label>@Model.ApplicationUser.Designation&nbsp;</label>
                                    </div>
                                    <div class="col-lg-2">
                                        <label>Address:</label>
                                    </div>
                                    <div class="col-lg-10">
                                        <label>@Model.ApplicationUser.Address&nbsp;</label>
                                    </div>
                                    <div class="col-lg-2">
                                        <label>Telephone No.:</label>
                                    </div>
                                    <div class="col-lg-10">
                                        <label>@Model.ApplicationUser.PhoneNumber&nbsp;</label>
                                    </div>
                                    <div class="col-lg-2">
                                        <label>Mobile No.:</label>
                                    </div>
                                    <div class="col-lg-10">
                                        <label>@Model.ApplicationUser.Mobile&nbsp;</label>
                                    </div>
                                    <div class="col-lg-2">
                                        <label>Fax No.:</label>
                                    </div>
                                    <div class="col-lg-10">
                                        <label>@Model.ApplicationUser.Fax&nbsp;</label>
                                    </div>
                                    <div class="col-lg-2">
                                        <label>Email:</label>
                                    </div>
                                    <div class="col-lg-10">
                                        <label>@Model.ApplicationUser.Email&nbsp;</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 col-centered">
    <div id="panel-title">Account List</div>
        <div class="panel panel-default">
            <div class="panel-body">
                <div id="panel-container">
                    <form class="form-horizontal">
                        <br />
                        <div class="row spacing">
                            <div class="col-lg-12">
                                <table class="table table-white" style="margin-bottom: 0 !important;">
                                    <thead>
                                        <tr>
                                            <th>
                                                Account Name
                                            </th>
                                            <th>
                                                Account Code
                                            </th>
                                            <th>
                                                &nbsp;
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var account in Model.Accounts)
                                        {
                                            <tr>
                                                <td>
                                                    @account.Name
                                                </td>
                                                <td>
                                                    @account.Code
                                                </td>
                                                <td>
                                                    <a href="@(Url.Action("Index", "AccountInformation", new { accountCode = account.Code }))" class="btn btn-primary btn-xs">Manage Account</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>