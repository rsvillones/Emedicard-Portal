@model Corelib.Models.IdReplacement

@{
    ViewBag.Title = "ID Replacement";
    Member member = ViewBag.Member;
}

@using (Html.BeginForm("IdReplacement", "IdReplacements", FormMethod.Post, new { accountCode = ViewBag.AccountCode }))
{
    @Html.ValidationSummary(true);
    @Html.AntiForgeryToken()

    @Html.Partial("_IdReplacement", Model)

    <div class="row space">
        <div class="col-lg-12">
            <div class="no-color pull-right">
                @Html.ActionLink("Approve", "ApproveIdReplacement", new { guid = Model.Guid }, new { @class = "btn btn-primary " })
                @Html.ActionLink("Disapprove", "DisapproveIdReplacement", new { guid = Model.Guid }, new { @class = "btn btn-danger" })
                @Html.ActionLink("Back to List", "Index", new { memberGuid = member.Guid }, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}
</div>
